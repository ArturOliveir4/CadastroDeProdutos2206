@model List<ProdutoModel>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="text-center">
    <h1 class="display-4">Lista de Produtos</h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Preço</th>
      <th scope="col">Quantidade</th>
    </tr>
  </thead>
  <tbody>
      @if(Model != null && Model.Any())
      {
          @foreach(ProdutoModel produto in Model)
          {
              <tr>
                  <th scope="row">@produto.Id</th>
                  <td>@produto.Nome</td>
                  <td>@produto.Preco</td>
                  <td>@produto.Quantidade</td>
                  <td>
                  <div class="btn-group" role="group" aria-label="Basic example">
                      <a role="button" class="btn btn-primary" asp-route-id="@produto.Id" asp-controller = "Produto" asp-action = "Editar">Editar</a>
                      <a role="button" class="btn btn-danger" asp-route-id="@produto.Id" asp-controller = "Produto" asp-action = "ApagarConfirmar">Apagar</a>
                 </div>
                 </td>
             </tr>
          }
      }
  </tbody>
</table>    
<a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="Index">Voltar</a>
</div>
