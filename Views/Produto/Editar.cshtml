@model ProdutoModel

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="text-center">
    <h1>Editar Produto</h1>
</div>

<form asp-controller="Produto" asp-action="Alterar" method="Post">
  
    <input type="hidden" asp-for="Id" />
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="@Model.Nome">
    @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="form-group">
    <label for="preco">Preço</label>
    <input type="number" asp-for="Preco" class="form-control" placeholder="@Model.Preco">
    @Html.ValidationMessageFor(x => x.Preco)
  </div>

  <div class="form-group">
    <label for="validade">Quantidade</label>
    <input type="text" asp-for="Quantidade" class="form-control" placeholder="@Model.Quantidade">
    @Html.ValidationMessageFor(x => x.Quantidade)
  </div>

  <br />

  <button type="submit" class="btn btn-primary btn-lg btn-block">Editar</button>
  <a class="btn btn-secondary btn-lg btn-block" role="button" asp-controller="Produto" asp-action="Lista" role="button">Voltar</a>

</form>
